/*find odd and even numbers in give integer*/
#include<stdio.h>
int main()
{
	int num1,num2, r, i;
	printf("enter the M value: ");
	scanf("%d",& num1);
	printf("enter the N value: ");
	scanf("%d",& num2);
	printf("\n Display the even numbers between %d & %d are: ",num1,num2);
	for (i= num1; i<= num2; i++)
	{
		r= i%2;
		if(r==0)
		printf("\n %d", i);
	}
	printf("\n display the odd numbers between %d & %d are : ", num1, num2);
	for (i= num1; i<= num2; i++)
	{
		r= i%2;
		if(r==1)
		printf("\n %d", i);
	}
	return 0;
}
